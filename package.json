{
  "name": "oidc-fastify-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "scripts": {
    "dev:op": "pnpm --filter @apps/op dev",
    "dev:api": "pnpm --filter @apps/api dev",
    "dev:app": "pnpm --filter @apps/app dev",
    "dev": "concurrently -n op,api,app -c blue,green,magenta \"pnpm dev:op\" \"pnpm dev:api\" \"pnpm dev:app\"",
    "build": "pnpm -r --filter ./apps... run build",
    "caddy": "caddy run --config ./caddyfile"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.9.2"
  }
}
