{
  "name": "@apps/app",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm css:watch\" \"tsx watch src/index.ts\"",
    "css:build": "pnpm exec tailwindcss -i ./src/css/input.css -o ./public/styles.css",
    "css:watch": "pnpm exec tailwindcss -i ./src/css/input.css -o ./public/styles.css --watch",
    "build": "pnpm css:build && tsc -p tsconfig.json",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@apps/shared": "workspace:*",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "jose": "^6.1.0",
    "openid-client": "^6.8.1",
    "pino": "^9.14.0",
    "pino-pretty": "^13.1.2",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.15",
    "@types/cookie-parser": "^1.4.9",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/node": "^24.9.1",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.15",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
