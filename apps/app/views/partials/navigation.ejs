            </svg>
            <%= tokens ? 'Authenticated' : 'Not Authenticated' %>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex items-center space-x-2">
          <% if (!tokens) { %>
            <a href="/login"
               class="inline-flex items-center px-3 py-2 border border-plaid-mint-200 rounded-md text-sm font-medium text-plaid-mint-700 bg-plaid-mint-200 hover:bg-plaid-mint-400 transition-colors">
              Login
            </a>
          <% } else { %>
            <a href="/logout"
