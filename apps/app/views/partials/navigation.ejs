      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button"
                class="mobile-menu-button bg-plaid-light-gray inline-flex items-center justify-center p-2 rounded-md text-plaid-gray hover:text-plaid-dark-gray hover:bg-plaid-mint-200 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-plaid-mint-400"
                aria-controls="mobile-menu"
                aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="md:hidden mobile-menu" id="mobile-menu" style="display: none;">
      <div class="px-2 pt-2 pb-3 space-y-1 border-t border-plaid-blue-sky-200">
        <a href="/api-explorer"
           class="<%= currentPage === 'api-explorer' ? 'bg-plaid-mint-200 text-plaid-mint-700' : 'text-plaid-dark-gray hover:text-plaid-black' %> block px-3 py-2 rounded-md text-base font-medium transition-colors">
          API Explorer
        </a>
        <a href="/token"
           class="<%= currentPage === 'token' ? 'bg-plaid-mint-200 text-plaid-mint-700' : 'text-plaid-dark-gray hover:text-plaid-black' %> block px-3 py-2 rounded-md text-base font-medium transition-colors">
          Token Inspector
        </a>
        <a href="https://plaid.com/core-exchange/docs/"
           target="_blank"
           rel="noopener noreferrer"
           class="text-plaid-dark-gray hover:text-plaid-black block px-3 py-2 rounded-md text-base font-medium transition-colors">
          Docs
        </a>
        <a href="https://github.com/plaid/core-exchange-node-example"
           target="_blank"
           rel="noopener noreferrer"
           class="text-plaid-dark-gray hover:text-plaid-black block px-3 py-2 rounded-md text-base font-medium transition-colors">
          Source
        </a>
      </div>
    </div>
