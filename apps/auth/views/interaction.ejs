<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OIDC Dev Login</title>
  <link href="/public/styles.css" rel="stylesheet">
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="max-w-md w-full mx-4">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <div class="text-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900">OIDC Dev Login</h1>
        <div class="mt-2 text-sm text-gray-600">
          Interaction: <code class="bg-gray-100 px-2 py-1 rounded text-xs font-mono"><%= uid %></code>
          <span class="text-gray-400">(<%= prompt %>)</span>
        </div>
      </div>
      
      <% if (prompt === 'login') { %>
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="mb-4 bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  Authentication Failed
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <%= error %>
                </div>
              </div>
            </div>
          </div>
        <% } %>

        <form method="post" action="/interaction/<%= uid %>/login" class="space-y-6">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Email Address
            </label>
            <input
              name="email"
              id="email"
              type="email"
              placeholder="user@example.test"
              value="<%= typeof email !== 'undefined' ? email : '' %>"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
              autofocus
            />
          </div>

          <div>
            <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
              Password
            </label>
            <input
              name="password"
              id="password"
              type="password"
              placeholder="Enter password"
              required
              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
            />
          </div>

          <button
            type="submit"
            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors"
          >
            Sign In
          </button>
        </form>
        
        <div class="mt-4 text-xs text-gray-500 text-center">
          <p><strong>Development credentials:</strong></p>
          <p class="mt-2">Authorized user:</p>
          <p>Email: user@example.test</p>
          <p>Password: passw0rd!</p>
          <p class="mt-2">Unauthorized user (test error):</p>
          <p>Email: blocked@example.test</p>
          <p>Password: passw0rd!</p>
        </div>
      <% } else { %>
        <div class="bg-blue-50 border border-blue-200 rounded-md p-4 mb-6">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-blue-800">
                Permission Request
              </h3>
              <div class="mt-2 text-sm text-blue-700">
                <p class="mb-2"><strong>The application is requesting access to:</strong></p>
                <ul class="list-disc list-inside space-y-1">
                  <%
                    const scopeDescriptions = {
                      'openid': 'Basic identity',
                      'profile': 'Profile information',
                      'email': 'Email address',
                      'offline_access': 'Offline access (refresh tokens)',
                      'accounts:read': 'Account data'
                    };

                    scopes.forEach(scope => {
                  %>
                    <li><code class="bg-blue-100 px-2 py-1 rounded text-xs font-mono"><%= scope %></code> - <%= scopeDescriptions[scope] || 'Additional permissions' %></li>
                  <% }); %>
                </ul>
              </div>
            </div>
          </div>
        </div>
        
        <form method="post" action="/interaction/<%= uid %>/confirm">
          <button
            type="submit"
            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors"
          >
            Approve Access
          </button>
        </form>

        <form method="post" action="/interaction/<%= uid %>/cancel" class="mt-3">
          <button
            type="submit"
            class="w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors"
          >
            Cancel
          </button>
        </form>
      <% } %>
    </div>
  </div>
</body>
</html>