{
  "name": "@apps/op",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run css:watch\" \"tsx watch src/index.ts\"",
    "css:build": "npx @tailwindcss/cli -i ./src/css/input.css -o ./public/styles.css",
    "css:watch": "npx @tailwindcss/cli -i ./src/css/input.css -o ./public/styles.css --watch",
    "build": "npm run css:build && tsc -p tsconfig.json",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@apps/shared": "workspace:*",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "oidc-provider": "^9.5.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.13",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
